<main class="mg-cus-nav">

    <section class="feed pe-auto">

        {{#each posts as |post|}}
        <div class="feed bg-dark text-white">
            <div class="post-card d-flex p-2 justify-content-between" data-id="{{post.id}}">
                <h3>{{post.title}}</h2>
                <p class="author"><a href="../profile/{{post.user.id}}">Created by: {{post.user.username}}, on: {{post.createdAt}}</a></p>
            </div>
            <div class="description d-flex p-2" >
                <p id="{{post.id}}">{{post.contents}}</p>
            </div>
            {{#if is_current_user}}
                <div>
                    <button type="button" class="btn btn-outline-danger delete" data-id="{{post.id}}">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                            <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5Zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5Zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6Z"></path>
                            <path d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1ZM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118ZM2.5 3h11V2h-11v1Z"></path>
                        </svg>
                        "Delete"
                    </button>

                </div>
            {{/if}}
            {{!-- {{#each post.comments as |comment|}}
            <div id="commentBox">
                <p class="comment" id="{{comment.id}}">{{comment.comment}}</p>
                <p class="author"><a href="../profile/{{comment.user.id}}">Created by: {{comment.user.username}}, on: {{comment.createdAt}}</a></p>
            </div>
            {{/each}}                --}}
        </div>
        {{/each}}
    </section>
</main>

<script src="/js/dashboard.js"></script>